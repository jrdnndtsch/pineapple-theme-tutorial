<!-- set the variable page to be the frontpage -->
{% assign page = pages.frontpage %}
<h2>{{ page.title }}</h2>
<p>{{ page.content }}</p>

<!-- set the variable collection to the frontpage collection -->
{% assign collection = collections.frontpage %}
{% paginate collection.products by 8 %}
	<div class="clearfix margin-bottom-30">
	  <h2>Collection: {{ collection.title }}</h2>
	  {% for product in collection.products %}
	    {% include 'product-loop' %}
	  {% endfor %}
  </div>

<!-- if there are multiple pages, show pagination links -->
{% if paginate.pages > 1 %}
<div class="pagination text-center margin-bottom-30">
  <p>{{ paginate | default_pagination }}</p>
</div>
{% endif %}
{% endpaginate %}
